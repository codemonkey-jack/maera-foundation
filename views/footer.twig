{#<?php#}
{% import 'grid_classes.html.twig' as grid %}

{% do action( 'maera/footer/before', post.ID ) %}
<footer class="page-footer">
	{% do action( 'maera/footer/start', post.ID ) %}
	<div class="container wrap footer-section" id="wrap-footer-section">
		{% if sidebar.footer %}
			<div class="{{ grid.row() }}">{{ sidebar.footer }}</div>
		{% endif %}
		<hr/>
		<div class="{{ grid.container() }}" id="footer-copyright">
			<div class="{{ grid.row() }}">
				{{ theme.theme_mod('footer_text', '&copy; [year] [sitename]')|replace({'[year]': now|date('Y') ,'[sitename]': bloginfo('name') }) }}
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
	<script>jQuery(document).foundation();</script>
	{% do action( 'maera/footer/end', post.ID ) %}
</footer>
{% do action( 'maera/footer/after', post.ID ) %}
{% if menu.offcanvas %}
	<a class="exit-off-canvas"></a>
{% endif %}
</div>
</div>
{{ function( 'wp_footer' ) }}
</body>
</html>
